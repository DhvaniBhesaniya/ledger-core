        {
            "name": "Accounts",
            "item": [
                {
                    "name": "Create Account (Public)",
                    "event": [
                        {
                            "listen": "test",
                            "script": {
                                "exec": [
                                    "if (pm.response.code === 201) {",
                                    "    var jsonData = pm.response.json();",
                                    "    pm.collectionVariables.set('account_id', jsonData.account.id);",
                                    "    pm.collectionVariables.set('customer_api_key', jsonData.secret_api_key);",
                                    "    console.log('Account ID:', jsonData.account.id);",
                                    "    console.log('Customer API Key:', jsonData.secret_api_key);",
                                    "}"
                                ]
                            }
                        }
                    ],
                    "request": {
                        "method": "POST",
                        "header": [
                            {
                                "key": "Content-Type",
                                "value": "application/json"
                            }
                        ],
                        "body": {
                            "mode": "raw",
                            "raw": "{\n  \"business_name\": \"My Business\",\n  \"currency\": \"USD\"\n}"
                        },
                        "url": {
                            "raw": "{{base_url}}/api/accounts",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "accounts"
                            ]
                        },
                        "description": "Public endpoint - Creates account and auto-generates customer API key"
                    }
                },
                {
                    "name": "Get Account (Customer - Own)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "x-api-key",
                                "value": "{{customer_api_key}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/accounts/{{account_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "accounts",
                                "{{account_id}}"
                            ]
                        },
                        "description": "Customer can only access their own account"
                    }
                },
                {
                    "name": "Get Account (Admin - Any)",
                    "request": {
                        "method": "GET",
                        "header": [
                            {
                                "key": "x-api-key",
                                "value": "{{admin_api_key}}"
                            }
                        ],
                        "url": {
                            "raw": "{{base_url}}/api/accounts/{{account_id}}",
                            "host": [
                                "{{base_url}}"
                            ],
                            "path": [
                                "api",
                                "accounts",
                                "{{account_id}}"
                            ]
                        },
                        "description": "Admin can access any account"
                    }
                },
